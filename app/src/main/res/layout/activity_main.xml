<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.star3.takehomeexam.MainActivity">

    <Button
        android:id="@+id/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="글쓰기"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/test1_fragment"
        android:name="com.example.star3.takehomeexam.Test1Fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/test2_fragment"/>

    <fragment
        android:id="@+id/test2_fragment"
        android:name="com.example.star3.takehomeexam.Test2Fragment"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_weight="1" />

</android.support.constraint.ConstraintLayout>
